<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/rounded_view"
    android:padding="16dp">

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00FFFF"
        android:text="Date"/>

    <TextView
        android:textColor="#00FFFF"
        android:id="@+id/steps_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps"/>

    <TextView
        android:textColor="#00FFFF"
        android:id="@+id/calories_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"/>

    <TextView
        android:textColor="#00FFFF"
        android:id="@+id/stepduration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"/>

    <TextView
        android:textColor="#00FFFF"
        android:id="@+id/water_intake_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Intake"/>

    <TextView
        android:textColor="#00FFFF"
        android:id="@+id/sleep_duration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep Duration"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center">
        <Button
            android:backgroundTint="#00FFFF"
            android:textColor="@color/fill_color"
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Edit"/>

        <Button
            android:textColor="@color/fill_color"
            android:backgroundTint="#00FFFF"
           android:padding="5dp"
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
    </LinearLayout>


</LinearLayout>
